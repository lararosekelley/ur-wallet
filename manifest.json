{
  "manifest_version": 2,
  "name": "UR Wallet",
  "description": "A tool that lets University of Rochester students to see their Declining and URos balances.",
  "version": "2.0",

  "permissions": [
    "http://*/*", 
    "https://*/*",
    "*://my.rochester.edu/*",
    "*://ecard.sequoiars.com/*",
    "storage",
    "management"
  ],

  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
  }
}